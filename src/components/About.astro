---
import { siteConfig } from "../config";

// âœ… Safely flatten all skills
const skillsList = [
  ...(Array.isArray(siteConfig.skills?.languages) ? siteConfig.skills.languages : []),
  ...(Array.isArray(siteConfig.skills?.frameworksAndLibraries) ? siteConfig.skills.frameworksAndLibraries : []),
  ...(Array.isArray(siteConfig.skills?.toolsAndPlatforms) ? siteConfig.skills.toolsAndPlatforms : []),
  ...(Array.isArray(siteConfig.skills?.coreCompetencies) ? siteConfig.skills.coreCompetencies : [])
];
---

<section id="about" class="p-8 sm:p-12 md:p-16 lg:p-24">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
        <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
          About Me
        </h2>
        <div class="w-[75px] h-[5px] mt-2 rounded-full" style={`background-color: ${siteConfig.accentColor}`}>
        </div>
      </div>

      <div class="lg:col-span-8 space-y-8">
        <p class="text-lg sm:text-xl md:text-2xl leading-relaxed text-gray-600">
          {siteConfig.aboutMe}
        </p>

        <div class="pt-4">
          <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-xl font-semibold mb-4 text-gray-900">Skills</h3>
            {
              skillsList.length > 0
                ? <ul class="list-disc pl-6 space-y-2 text-gray-800 text-base sm:text-lg">
                    {skillsList.map(skill => (
                      <li>{skill}</li>
                    ))}
                  </ul>
                : <p class="text-gray-500 italic">No skills available</p>
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
